<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_rootView"
    android:fitsSystemWindows="true"
    >

    <include
        android:id="@+id/layout_head"
        layout="@layout/navigation_default"
        />

    <RelativeLayout
        android:id="@+id/rl_user_head"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/dimen_20_dp"
        android:paddingTop="@dimen/dimen_10_dp"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_40_dp"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="头像"
          android:textColor="@color/common_black"
          android:textSize="@dimen/dimen_18_sp"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          />

      <!--  <ImageView
            android:id="@+id/iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/img_user_head_two"/>-->


        <!--头像，可以换成自定义的圆形图片框架啥的，随意-->
        <com.zhd.mswcs.common.weidgt.picture.view.CircleImageView
            android:src="@mipmap/img_user_head_two"
            android:id="@+id/iv_head"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/dimen_50_dp"
            android:layout_height="@dimen/dimen_50_dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:border_width="0dp"
            app:border_color="@android:color/transparent"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/common_line"
        />



    <RelativeLayout
        android:id="@+id/rl_user_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/dimen_20_dp"
        android:paddingTop="@dimen/dimen_10_dp"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_20_dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dimen_18_sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dimen_18_sp"
            android:drawableRight="@mipmap/img_arrow_right"
            android:drawablePadding="@dimen/dimen_15_dp"
            android:text=""/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/common_line"
        />



    <RelativeLayout
        android:id="@+id/rl_telephone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/dimen_15_dp"
        android:paddingTop="@dimen/dimen_10_dp"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_20_dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dimen_18_sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dimen_18_sp"
            android:drawableRight="@mipmap/img_arrow_right"
            android:drawablePadding="@dimen/dimen_15_dp"
            android:text=""/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/common_line"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/common_line"
        android:layout_marginTop="@dimen/dimen_10_dp"
        />

    <RelativeLayout
        android:id="@+id/rl_reporting_cycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/dimen_15_dp"
        android:paddingTop="@dimen/dimen_10_dp"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_20_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上报周期"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dimen_18_sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_escalation_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dimen_18_sp"
            android:drawableRight="@mipmap/img_arrow_right"
            android:drawablePadding="@dimen/dimen_15_dp"
            android:text="5分钟"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/common_line"
        />


    <RelativeLayout
        android:id="@+id/rl_sos_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/dimen_15_dp"
        android:paddingTop="@dimen/dimen_10_dp"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_20_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOS设置"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dimen_18_sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_sos_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dimen_18_sp"
            android:drawableRight="@mipmap/img_arrow_right"
            android:drawablePadding="@dimen/dimen_15_dp"
            android:text=""/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/common_line"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/common_line"
        android:layout_marginTop="@dimen/dimen_10_dp"
        />


    <RelativeLayout
        android:id="@+id/rl_ip_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/dimen_15_dp"
        android:paddingTop="@dimen/dimen_10_dp"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_20_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP设置"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dimen_18_sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_ip_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dimen_18_sp"
            android:drawableRight="@mipmap/img_arrow_right"
            android:drawablePadding="@dimen/dimen_15_dp"
            android:text=""/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/common_line"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/common_line"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:visibility="gone"
        />


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_mobile_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/dimen_15_dp"
        android:paddingTop="@dimen/dimen_10_dp"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_20_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机动电台"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dimen_18_sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_mobile_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dimen_18_sp"
            android:drawableRight="@mipmap/img_arrow_right"
            android:drawablePadding="@dimen/dimen_15_dp"
            android:text=""/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/common_line"
        android:visibility="gone"
        />






    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/common_line"
        android:layout_marginTop="@dimen/dimen_10_dp"
        />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_exit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/dimen_15_dp"
        android:paddingTop="@dimen/dimen_10_dp"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_20_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dimen_18_sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dimen_18_sp"
            android:drawableRight="@mipmap/img_arrow_right"
            android:drawablePadding="@dimen/dimen_15_dp"
            android:text=""/>

    </RelativeLayout>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/common_line"
        />



</LinearLayout>