<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/btn_white_bg"
    android:gravity="center"
    android:layout_gravity="center"
    >


    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_12_sp"
        android:text=""
        android:paddingLeft="@dimen/dimen_20_dp"
        android:paddingRight="@dimen/dimen_20_dp"
        android:paddingTop="@dimen/dimen_30_dp"
        android:textColor="@color/common_red"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dimen_20_dp"
            android:layout_marginRight="@dimen/dimen_20_dp"
            >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="IP地址："
             android:textSize="@dimen/dimen_15_sp"
             android:gravity="center"
             android:textColor="@color/color_black_232A33"
             />

            <EditText
                android:id="@+id/et_ip_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/common_white"
                android:hint="请输入服务器IP地址"
                android:textColorHint="@color/color_gray_3F4E5C"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textSize="@dimen/dimen_15_sp"
                android:inputType="text"
                android:textColor="@color/color_gray_3F4E5C"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/common_line"
            android:layout_marginLeft="@dimen/dimen_20_dp"
            android:layout_marginRight="@dimen/dimen_20_dp"
            />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40_dp"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dimen_20_dp"
        >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center"
            android:background="@drawable/btn_green_bg"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dimen_16_sp"
            android:layout_marginRight="@dimen/dimen_5_dp"
            />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="确定"
        android:background="@drawable/btn_green_bg"
        android:textColor="@color/common_white"
        android:textSize="@dimen/dimen_16_sp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_5_dp"
        />

    </LinearLayout>

    </LinearLayout>

