<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/rl_detail_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10_dp"
        >

        <ImageView
            android:id="@+id/iv_user_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_user_head_two"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/img_chat_right"
            android:layout_toLeftOf="@id/iv_user_head"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_location"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_10_dp"
                />


            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/common_white"
                android:textSize="@dimen/dimen_14_sp"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:paddingRight="@dimen/dimen_20_dp"
                android:paddingLeft="@dimen/dimen_5_dp"
                android:paddingTop="@dimen/dimen_10_dp"
                android:paddingBottom="@dimen/dimen_10_dp"
                />

        </LinearLayout>


    </RelativeLayout>



</LinearLayout>