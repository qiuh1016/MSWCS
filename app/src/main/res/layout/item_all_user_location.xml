<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/layout_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/dimen_100_dp"
        android:layout_height="match_parent"
        android:background="@color/common_red"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/common_white"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10_dp"
        android:background="@color/common_white"
        android:id="@+id/rl_rootView"
        >

      <ImageView
          android:id="@+id/iv_user_head"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/img_user_head"
          />


        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/common_black"
            android:textSize="@dimen/dimen_14_sp"
            android:layout_toRightOf="@id/iv_user_head"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            />


        <TextView
            android:id="@+id/tv_location_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_unit"
            android:textSize="@dimen/dimen_12_sp"
            android:layout_alignParentRight="true"
            />



        <TextView
            android:id="@+id/tv_longtitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_unit"
            android:textSize="@dimen/dimen_12_sp"
            android:layout_below="@id/tv_user_name"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:layout_toRightOf="@id/iv_user_head"
            android:layout_marginTop="@dimen/dimen_10_dp"
            />


        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_location"
            android:layout_toRightOf="@id/tv_longtitude"
            android:layout_alignBottom="@id/tv_longtitude"
            android:layout_marginLeft="@dimen/dimen_5_dp"
            android:layout_marginRight="@dimen/dimen_5_dp"
            />


        <TextView
            android:id="@+id/tv_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_unit"
            android:textSize="@dimen/dimen_12_sp"
            android:layout_alignBottom="@id/tv_longtitude"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_10_dp"
            />
    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>

</LinearLayout>