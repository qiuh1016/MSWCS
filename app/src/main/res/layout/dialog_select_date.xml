<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:padding="@dimen/dimen_10_dp"
    android:background="@drawable/btn_white_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RadioGroup
        android:id="@+id/rg_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp"
        android:orientation="horizontal"
        android:background="@color/common_white"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_marginRight="@dimen/dimen_10_dp"
        >

        <RadioButton
            android:button="@null"
            android:id="@+id/btn_current_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rb_select_date_selector"
            android:text="当天"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dimen_14_sp"
            android:layout_margin="@dimen/dimen_5_dp"
            />


        <RadioButton
            android:button="@null"
            android:id="@+id/btn_before_week"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rb_select_date_selector"
            android:text="最近一周"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dimen_14_sp"
            android:layout_margin="@dimen/dimen_5_dp"
            />

        <RadioButton
            android:button="@null"
            android:id="@+id/btn_before_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rb_select_date_selector"
            android:text="最近一个月"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dimen_14_sp"
            android:layout_margin="@dimen/dimen_5_dp"
            />


    </RadioGroup>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45_dp"
        android:orientation="horizontal"
        android:background="@color/common_white"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_marginRight="@dimen/dimen_10_dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间："
            android:textColor="@color/common_gray"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            />

        <LinearLayout
            android:id="@+id/ll_starttime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dimen_5_dp"
            android:background="@drawable/btn_gray_bg"
            >

            <TextView
                android:id="@+id/tv_starttime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="请选择开始时间"
                android:paddingLeft="@dimen/dimen_15_dp"
                android:textSize="@dimen/dimen_14_sp"
                android:textColorHint="@color/common_white"
                android:gravity="center_vertical"
                android:textColorHighlight="@color/common_blue_FF2C6FA4"
                />

            <ImageView
                android:id="@+id/iv_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_select_date"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_5_dp"
                />

        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45_dp"
        android:orientation="horizontal"
        android:background="@color/common_white"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_marginRight="@dimen/dimen_10_dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间："
            android:layout_gravity="center_vertical"
            android:textColor="@color/common_gray"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            />

        <LinearLayout
            android:id="@+id/ll_endtime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dimen_5_dp"
            android:background="@drawable/btn_gray_bg"
            >

            <TextView
                android:id="@+id/tv_endtime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="请选择结束时间"
                android:paddingLeft="@dimen/dimen_15_dp"
                android:textSize="@dimen/dimen_14_sp"
                android:textColorHint="@color/common_white"
                android:gravity="center_vertical"
                android:textColorHighlight="@color/common_blue_FF2C6FA4"
                />

            <ImageView
                android:id="@+id/iv_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_select_date"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_5_dp"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp"
        android:orientation="horizontal"
        android:background="@color/common_white"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_marginRight="@dimen/dimen_10_dp"
        >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_gray_bg"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dimen_16_sp"
            android:layout_margin="@dimen/dimen_5_dp"
            />


        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_green_bg"
            android:text="确定"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dimen_16_sp"
            android:layout_margin="@dimen/dimen_5_dp"
            />


    </LinearLayout>


</LinearLayout>