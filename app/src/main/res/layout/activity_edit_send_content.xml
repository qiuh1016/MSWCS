<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_rootView"
    android:fitsSystemWindows="true"
    android:background="@color/common_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp"
        android:layout_marginLeft="@dimen/dimen_20_dp"
        android:layout_marginRight="@dimen/dimen_20_dp"
        android:orientation="horizontal">

        <com.zhd.mswcs.common.weidgt.edittext.ClearEditText
            android:id="@+id/et_send_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/common_white"
            android:drawablePadding="10dp"
            android:hint="填写SOS发送的内容"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/color_gray_3F4E5C"
            android:textColorHint="@color/color_gray_3F4E5C"
            android:textSize="@dimen/dimen_16_sp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/common_line"
        android:layout_marginLeft="@dimen/dimen_20_dp"
        android:layout_marginRight="@dimen/dimen_20_dp"
        />

</LinearLayout>