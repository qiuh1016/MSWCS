<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_rootView"
    android:fitsSystemWindows="true"
    >


    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/common_line"
        android:layout_marginTop="@dimen/dimen_10_dp"
        />

    <RelativeLayout
        android:id="@+id/rl_send_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/dimen_15_dp"
        android:paddingTop="@dimen/dimen_10_dp"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_20_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送内容"
            android:textColor="@color/common_black"
            android:textSize="@dimen/dimen_18_sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_send_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dimen_18_sp"
            android:drawableRight="@mipmap/img_arrow_right"
            android:drawablePadding="@dimen/dimen_15_dp"
            android:text=""/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/common_line"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/common_line"
        android:layout_marginTop="@dimen/dimen_10_dp"
        />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_send_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"
            android:paddingLeft="@dimen/dimen_15_dp"
            android:paddingTop="@dimen/dimen_10_dp"
            android:paddingBottom="@dimen/dimen_10_dp"
            android:paddingRight="@dimen/dimen_20_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送手机号码"
                android:textColor="@color/common_black"
                android:textSize="@dimen/dimen_18_sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_send_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dimen_18_sp"
                android:drawableRight="@mipmap/img_arrow_right"
                android:drawablePadding="@dimen/dimen_15_dp"
                android:text=""/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_show_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:src="@mipmap/img_show_detail"
            android:layout_marginRight="@dimen/dimen_30_dp"
            android:visibility="gone"
            />

    </FrameLayout>









    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/common_line"
        />




</LinearLayout>