<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/btn_white_bg"
    android:gravity="center"
    android:layout_gravity="center"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_telephone_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/dimen_10_dp"
        android:text=""
        android:textSize="@dimen/dimen_15_sp"
        android:gravity="center"
        android:textColor="@color/color_black_232A33"
        />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/common_line"
            android:layout_marginLeft="@dimen/dimen_20_dp"
            android:layout_marginRight="@dimen/dimen_20_dp"
            />



    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40_dp"
        android:text="确定"
        android:layout_margin="@dimen/dimen_10_dp"
        android:background="@drawable/btn_green_bg"
        android:textColor="@color/common_white"
        android:textSize="@dimen/dimen_16_sp"
        android:gravity="center"
        />

    </LinearLayout>


