<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_white"
    android:id="@+id/ll_rootView"
    android:fitsSystemWindows="true"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dimen_40_dp"
        android:layout_marginRight="@dimen/dimen_40_dp"
        android:layout_marginTop="@dimen/dimen_50_dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我们已经发送"
            android:textSize="@dimen/dimen_16_sp"
            android:gravity="center"
            android:textColor="@color/color_black_232A33"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="验证码"
            android:textSize="@dimen/dimen_16_sp"
            android:gravity="center"
            android:textColor="@color/color_green_07BF50"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="到你的手机:"
            android:textSize="@dimen/dimen_16_sp"
            android:gravity="center"
            android:textColor="@color/color_black_232A33"
            />

        </LinearLayout>


    <TextView
        android:id="@+id/tv_telphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="189 1234 8888"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/common_black"
        android:layout_marginTop="@dimen/dimen_20_dp"
        android:layout_marginBottom="@dimen/dimen_10_dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dimen_40_dp"
        android:layout_marginRight="@dimen/dimen_40_dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="验证码"
            android:textSize="@dimen/dimen_16_sp"
            android:gravity="center"
            android:textColor="@color/color_black_232A33"
            />

        <com.zhd.mswcs.common.weidgt.edittext.ClearEditText
            android:id="@+id/et_verification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/common_white"
            android:hint="填写短信接收的验证码"
            android:textColorHint="@color/color_gray_3F4E5C"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:textSize="@dimen/dimen_14_sp"
            android:inputType="text"
            android:textColor="@color/color_gray_3F4E5C"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/common_line"
        android:layout_marginLeft="@dimen/dimen_40_dp"
        android:layout_marginRight="@dimen/dimen_40_dp"
        />


        <Button
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="完成"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dimen_18_sp"
            android:layout_marginLeft="@dimen/dimen_40_dp"
            android:layout_marginRight="@dimen/dimen_40_dp"
            android:background="@drawable/btn_green_bg"
            android:layout_marginTop="@dimen/dimen_20_dp"
            />

    </LinearLayout>

