<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MyRadioButton">
        <attr name="drawableSize" format="dimension"/>
        <attr name="drawableTop" format="reference"/>
        <attr name="drawableLeft" format="reference"/>
        <attr name="drawableRight" format="reference"/>
        <attr name="drawableBottom" format="reference"/>
    </declare-styleable>


    <declare-styleable name="SmileyLoadingView">
        <!-- animation duration -->
        <attr name="duration" format="integer" />
        <!-- stroke width -->
        <attr name="strokeWidth" format="dimension" />
        <!-- stroke color -->
        <attr name="strokeColor" format="color" />
        <!-- animation repeat count -->
        <attr name="animRepeatCount" format="integer" />
    </declare-styleable>


    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference" />
    </declare-styleable>


    <!--loading dialoag-->
    <declare-styleable name="SpinnerLoader">
        <attr name="point_color" format="color" />
        <attr name="isdynamic" format="boolean" />
    </declare-styleable>

    <!--perfectControlImage-->
    <declare-styleable name="PerfectControlImageView">
        <attr name="titleHeight" format="dimension"/>
    </declare-styleable>

    <!--CuttingFrameView-->
    <declare-styleable name="CuttingFrameView">
        <attr name="headerHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>


</resources>